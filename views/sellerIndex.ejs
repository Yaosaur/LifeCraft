<% layout('layouts/boilerplate') -%>
<link rel="stylesheet" href="/stylesheets/sellerIndex.css" />
<div id="seller-dashboard">
  <div id="display">
    <form action="/api/v1/seller/crafts">
      <input
        type="search"
        name="title"
        placeholder="Browse your life's work..."
      />
      <button><img src="/images/search-icon.png" /></button>
    </form>
    <div id="cards">
      <%for (let craft of crafts){%>
      <div class="card">
        <a href="/api/v1/crafts/<%=craft._id%>"
          ><img src="<%=craft.image%>" /></a
        ><span class="price">$<%=craft.price.toFixed(2)%></span>
        <span class="title"><%=craft.title%></span>
      </div>
      <% } %>
    </div>
  </div>
  <div id="controls">
    <div id="storeName">Name of Store</div>
    <div>Sales Total/Store Rating</div>
    <form action="/api/v1/crafts/new">
      <button id="new">New Craft</button>
    </form>
    <form action="">
      <div>Filter Crafts</div>
      <fieldset>
        <legend>Category</legend>
        <% for (let category of craftSchema.obj.category.enum) {%>
        <input type="radio" id="<%=category%>" name="category" />
        <label for="<%=category%>"
          ><a href="/api/v1/seller/crafts/filter?category=<%=category%>"
            ><%=category%></a
          ></label
        >
        <% } %>
      </fieldset>
      <fieldset>
        <legend>Price</legend>
        <input type="radio" id="5-" name="price" />
        <label for="5-"
          ><a href="/api/v1/seller/crafts/filter?price=lt5">Under $5</a></label
        >
        <input type="radio" id="5-50" name="price" />
        <label for="5-50"
          ><a href="/api/v1/seller/crafts/filter?price=min5max50"
            >$5 to $50</a
          ></label
        >
        <input type="radio" id="50+" name="price" />
        <label for="50+"
          ><a href="/api/v1/seller/crafts/filter?price=gt50">Over $50</a></label
        >
      </fieldset>
      <fieldset>
        <legend>Rating</legend>
        <input type="radio" id="" />
        <label for="kraken">Kraken</label>
      </fieldset>
    </form>
  </div>
</div>
